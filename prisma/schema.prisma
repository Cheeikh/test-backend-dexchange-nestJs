generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x", "debian-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransferStatus {
  PENDING
  PROCESSING
  SUCCESS
  FAILED
  CANCELED
}

enum TransferChannel {
  WAVE
  ORANGE_MONEY
  FREE_MONEY
  MOOV_MONEY
}

model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("api_keys")
}

model Transfer {
  id           String          @id @default(uuid())
  reference    String          @unique
  amount       Float
  currency     String          @default("XOF")
  channel      TransferChannel
  status       TransferStatus  @default(PENDING)
  fees         Float
  total        Float
  recipientPhone String
  recipientName  String
  metadata     Json?
  providerRef  String?
  errorCode    String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  auditLogs    AuditLog[]

  @@map("transfers")
  @@index([status])
  @@index([channel])
  @@index([createdAt])
  @@index([reference])
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  transferId String?
  metadata   Json?
  createdAt  DateTime @default(now())

  transfer   Transfer? @relation(fields: [transferId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
  @@index([transferId])
  @@index([action])
  @@index([createdAt])
}
